{
  "plugins": [
    "stylelint-order",
    "stylelint-prettier"
  ],
  "extends": [
    "stylelint-prettier/recommended",
    "stylelint-config-idiomatic-order"
  ],
  "rules": {
    "prettier/prettier": true,
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "no-empty-source": null
  }
}